<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/error_window_padding"
    android:layout_margin="@dimen/error_window_padding">

    <TextView
        android:id="@+id/ErrorWIndow.text.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TYTUÅ"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/error_window_text_title_size"/>

    <TextView
        android:layout_marginTop="@dimen/error_window_padding"
        android:id="@+id/ErrorWindow.text.message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="@dimen/error_window_text_message_size"
        android:gravity="center"/>

    <Button
        android:id="@+id/ErrorWindow.button.ok"
        android:layout_marginTop="@dimen/error_window_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/error_window_button_height"
        android:text="OK"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"/>
</LinearLayout>